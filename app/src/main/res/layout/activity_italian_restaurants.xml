<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItalianRestaurants"
    android:background="@color/green">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Italian Restaurants"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        app:layout_constraintTop_toTopOf="@+id/textView2">

        <ImageView
            android:id="@+id/italianRestaurant2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/italian_restaurant_1"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="La Vecchia Restaurant Uptown"
            android:textAlignment="center"
            android:background="@color/white"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="225dp"
        app:layout_constraintTop_toTopOf="@+id/textView2">

        <ImageView
            android:id="@+id/italianRestaurant1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/italian_restaurant_1"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Grazie Ristorante"
            android:textAlignment="center"
            android:background="@color/white"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="400dp"
        app:layout_constraintTop_toTopOf="@+id/textView2">

        <ImageView
            android:id="@+id/italianRestaurant3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/italian_restaurant_1"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Donatello Restaurant"
            android:textAlignment="center"
            android:background="@color/white"
            android:textSize="20dp"></TextView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>